<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.toluemoruwa.taxcalc.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:textSize="18sp"
        android:id="@+id/textt"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/txtCurrency"
                    android:layout_width="229dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"

                    android:hint="Input Short Code Of Currency"
                    android:inputType="textPersonName"
                    android:textSize="15sp"



                    android:layout_toEndOf="@+id/textt"
                    android:layout_marginStart="27dp" />
            </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="331dp"

            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="18sp"
       />

            <EditText
                android:id="@+id/txtPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp"


                android:hint="Price of all products bought"
                android:inputType="number"
                android:textIsSelectable="false"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="331dp"

            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax (%)"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/txtTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax "
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />
        </RelativeLayout>
</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="331dp"

                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax "
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="128dp" />

                <TextView
                    android:id="@+id/txtTaxCurr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:text="Tax"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView10" />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="331dp"

            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/txtCurr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CURRENCY"
        android:layout_toRightOf="@id/textView4"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="128dp"
        android:layout_marginStart="9dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtCurr" />
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
